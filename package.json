{
  "name": "whatsapp-expense-tracker",
  "version": "1.0.0",
  "description": "WhatsApp bot that processes expense messages and updates Google Sheets",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun --watch index.ts",
    "build": "bun build index.ts --outdir ./dist --target bun",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "google-spreadsheet": "^5.0.0",
    "groq-sdk": "^0.7.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.23.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@types/qrcode-terminal": "^0.12.0",
    "typescript": "^5.0.0"
  },
  "private": true
}
