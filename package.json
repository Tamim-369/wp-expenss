{
  "name": "whatsapp-expense-tracker",
  "version": "1.0.0",
  "description": "WhatsApp bot that processes expense messages and updates Google Sheets",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "type-check": "tsc --noEmit",
    "reset-session": "node scripts/reset-session.js"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "google-spreadsheet": "^5.0.0",
    "groq-sdk": "^0.7.0",
    "mongoose": "^8.17.1",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.23.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "@types/qrcode-terminal": "^0.12.0",
    "typescript": "^5.0.0"
  },
  "private": true
}
